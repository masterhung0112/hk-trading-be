{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "declaration": true,
        "importHelpers": true,
        "rootDir": "src",
        "outDir": "dist",
        "lib": [ "es2015", "dom" ],
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules"]
}
