{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES6",
        "rootDir": "./src",
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "allowJs": true,
        "esModuleInterop": true,
        "lib": [ "es2015", "dom" ],
        "paths": {
            "@data/*": ["../data/*"],
        }
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules"]
}