{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "esnext",
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "allowJs": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "downlevelIteration": true,
        "emitDeclarationOnly": true,
        "lib": [ "es2015" ],
        "paths": {
            "@data/*": ["../data/*"],
        }
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules"]
}